---
import { getImageUrl } from "../backend.mjs";

const { record, image, width = 600, height = 300 } = Astro.props;

const imageURL =  getImageUrl(record, image);
---

{
    imageURL ? (
        <img
            src={imageURL}
            alt={`Photo de ${record.nom_maison ?? "maison"}`}
            width={width}
            height={height}
            class="w-full h-48 object-cover rounded-lg mb-3"
        />
    ) : (
        <p style="color:#b91c1c;">Aucune image trouv√©e</p>
    )
}
